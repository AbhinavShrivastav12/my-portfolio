{
  "version": 2,
  "public": true,
  "builds": [
    { "src": "public/**/*.html", "use": "@vercel/static" },
    { "src": "public/**/*.css", "use": "@vercel/static" },
    { "src": "public/**/*.js", "use": "@vercel/static" },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/", "dest": "/public/index.html" },
    { "src": "/about", "dest": "/public/about.html" },
    { "src": "/projects", "dest": "/public/projects.html" },
    { "src": "/contact", "dest": "/public/contact.html" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}
